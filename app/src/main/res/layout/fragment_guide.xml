<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GuideFragment"
    android:background="@drawable/bg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="ĐÂY LÀ 10 HƯỚNG DẪN CHƠI XỔ SỐ"
                android:textColor="#FFAB40"
                android:textSize="35dp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:columnCount="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gd1"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 1"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient"/>

                <TextView
                    android:id="@+id/gd2"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 2"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient" />


                <TextView
                    android:id="@+id/gd3"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 3"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/gd4"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 4"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/gd5"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 5"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient"/>

                <TextView
                    android:id="@+id/gd6"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 6"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient"/>

                <TextView
                    android:id="@+id/gd7"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 7"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient"/>


                <TextView
                    android:id="@+id/gd8"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 8"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient"/>

                <TextView
                    android:id="@+id/gd9"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 9"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient" />

                <TextView
                    android:id="@+id/gd10"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="HƯỚNG DẪN 10"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/gradient"/>

            </GridLayout>

            <Button
                android:id="@+id/btnB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/grid"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/customborder3"
                android:contentDescription="@string/back_button"
                android:text="QUAY LẠI TRANG TRƯỚC"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#FF9100" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>